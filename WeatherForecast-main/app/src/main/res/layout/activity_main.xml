<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sky">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weather Forecast"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#113355"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dự báo thời tiết chính xác và chi tiết"
        android:textSize="14sp"
        android:textColor="#5B7C9E"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Row: chip vị trí + wifi + refresh -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chipCurrentLocation"
        style="@style/Widget.Material3.Chip.Assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vị trí hiện tại"
        app:chipIcon="@drawable/ic_location_24"
        app:chipIconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/btnWifi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_wifi_24"
        app:tint="#5B7C9E"
        app:layout_constraintTop_toTopOf="@id/chipCurrentLocation"
        app:layout_constraintBottom_toBottomOf="@id/chipCurrentLocation"
        app:layout_constraintEnd_toStartOf="@id/btnRefresh"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnRefresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Refresh"
        android:src="@drawable/ic_refresh_24"
        app:tint="#5B7C9E"
        app:layout_constraintTop_toTopOf="@id/chipCurrentLocation"
        app:layout_constraintBottom_toBottomOf="@id/chipCurrentLocation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <!-- Card hiện tại -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/chipCurrentLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hồ Chí Minh"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#123B5A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivIcon"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvUpdatedAt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cập nhật lúc --:--"
                android:textSize="12sp"
                android:textColor="#7088A5"
                app:layout_constraintTop_toBottomOf="@id/tvCity"
                app:layout_constraintStart_toStartOf="@id/tvCity"
                app:layout_constraintEnd_toStartOf="@id/ivIcon"
                android:layout_marginTop="2dp"/>

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_cloud_24"
                app:tint="#8CA7C4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32°"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#1A4A74"
                app:layout_constraintTop_toBottomOf="@id/tvUpdatedAt"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvCondition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Partly Cloudy"
                android:textSize="16sp"
                android:textColor="#446E97"
                app:layout_constraintTop_toBottomOf="@id/tvTemp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvFeelsLike"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cảm giác như 36°"
                android:textSize="13sp"
                android:textColor="#7088A5"
                app:layout_constraintTop_toBottomOf="@id/tvCondition"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"/>

            <!-- 2 block: Độ ẩm & Gió -->
            <LinearLayout
                android:id="@+id/rowHumWind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvFeelsLike"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_info"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Độ ẩm"
                        android:textColor="#6C84A3"/>

                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--%"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#123B5A"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_info"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gió"
                        android:textColor="#6C84A3"/>

                    <TextView
                        android:id="@+id/tvWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- km/h"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#123B5A"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Tầm nhìn -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_info"
                android:padding="14dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowHumWind"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_goneMarginTop="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tầm nhìn"
                    android:textColor="#6C84A3"/>

                <TextView
                    android:id="@+id/tvVisibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- km"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#123B5A"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
